<?xml version="1.0"?>
<template
    format="5"
    revision="6"
    name="MVP Model Helper"
    minApi="9"
    minBuildApi="14"
    description="Creates a set of MVP Model files">

    <category value="Other" />
    <formfactor value="Mobile" />

    <parameter
        id="name"
        name="Name"
        type="string"
        constraints="class|unique|nonempty"
        default="Main"
        help="The name of the model classes to create" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />
        
    <parameter
        id="rootName"
        name="Root name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
